<% title "Projects" %>

<table>
  <tr>
    <th>Title</th>
    <th>Client</th>
    <th>Due Date</th>
    <th>Collaborators</th>
    <th>Tickets</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <% for project in @projects %>
    <tr>
      <%= render :partial => project %>
    </tr>
    <tr style="background: #DDD;">
      <td>title</td>
      <td>client</td>
      <td>due</td>
      <td>collabs</td>
      <td><%= link_to "New Ticket", new_project_ticket_path(project) %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Project", @client ? new_client_project_path(@client) : new_project_path %></p>
