<% title "User" %>

<p>
  <strong>Username:</strong>
  <%=h @user.username %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>
<p>
  <strong>Mobile Phone:</strong>
  <%=h @user.mobile_phone %>
</p>
<p>
  <strong>Phone:</strong>
  <%=h @user.phone %>
</p>

<p>
  <%= button_to "Edit", edit_user_path(@user), :class => "button", :method => :get %> <%= button_to "Destroy", @user, :confirm => 'Are you sure?', :class => "button", :method => :delete %> <%= cancel_button %>
</p>


