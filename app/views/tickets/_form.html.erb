<% form_for @ticket do |f| %>
  <%= f.error_messages %>
  <p class="form_header">
    
    <%= f.label :project_id %> 
    <%= f.collection_select :project_id, Project.all, 
      :id, :title_with_company %>
      
    &nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.label :user_id, "Assigned to" %> 
    <%= f.collection_select :user_id, User.all, :id, :fullname %>
    
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "title" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "mceEditor" %>
  </p>
  <p><%= f.submit "Save", :class => "button" %> <%= cancel_button %></p>
<% end %>
