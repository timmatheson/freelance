<% title "Contacts" %>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Mobile Phone</th>
    <th>Phone</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <% for contact in @contacts %>
    <tr>
      <td><%=h contact.firstname %></td>
      <td><%=h contact.lastname %></td>
      <td><%=h contact.email %></td>
      <td><%=h contact.mobile_phone %></td>
      <td><%=h contact.phone %></td>
      <td><%= link_to "Show", contact %></td>
      <td><%= link_to "Edit", edit_contact_path(contact) %></td>
      <td><%= link_to "Destroy", contact, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= button_to "New Contact", new_client_contact_path(@client || params[:client_id]), :class => "button", :method => :get %></p>
